{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "ESNext",
      "jsx": "preserve",
      "strict": true,
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      },
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    }
}